<h3>Sign Up</h3>
<% if @errors %>
	<%= render '/application/errors', :errors => @errors %>
<% end %>
<%= form_tag(signup_path) do %>
  <%= text_field_tag(:username, nil, :placeholder => "Username") %><br>
  <%= email_field_tag(:email, nil, :placeholder => "Email") %><br>
  <%= password_field_tag(:password, nil, :placeholder => "Password") %><br>

  <%= submit_tag("Sign Up!", :class => 'btn') %>
<% end %>
